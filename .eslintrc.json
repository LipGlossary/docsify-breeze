{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:lit-a11y/recommended",
    "plugin:prettier/recommended",
    "plugin:security/recommended",
    "prettier"
  ],
  "plugins": ["lit-a11y", "prettier", "security"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:lit-a11y/recommended",
        "plugin:prettier/recommended",
        "plugin:security/recommended",
        "prettier"
      ],
      "plugins": ["@typescript-eslint", "lit-a11y", "prettier", "security"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module",
        "ecmaVersion": 2017
      },
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off"
      }
    }
  ]
}
